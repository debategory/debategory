<!DOCTYPE html>
<html lang="{{ locale }}" dir="ltr">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{ __("Login") }} | Debategory</title>
    <link href="/static/img/Favicon-BW.svg" rel="shortcut icon" type="image/x-icon">
    <link href="/static/img/AppIcon.png" rel="apple-touch-icon-precomposed">
    <link rel="stylesheet" href="/static/uikit/css/uikit.min.css" />
    <link rel="stylesheet" href="/static/admin/style.css" />
  </head>
  <body class="dg-login-background">
    <div class="uk-cover uk-width-1-4@l uk-width-1-3@m uk-visible@m">
      <div class="dg-bubble uk-card uk-card-default uk-card-body uk-text-justify{% if messages.error %} uk-animation-shake{% endif %}">
        <h3 class="uk-card-title">{{ __("Hello.") }}</h3>
        <p class="uk-text-small">{{ __("Please log in to use this page. If you do not have login details, please contact the administrator.") }}</p>
        {% if messages.error %}
          <div class="uk-text-danger">
            <p>{{ __("Either the login name is not known or the password is wrong.") }}</p>
          </div>
        {% elseif messages.success %}
          <div class="uk-text-success">
            <p>{{ __("You have been successfully logged out. Goodbye!") }}</p>
          </div>
        {% endif %}
        <form action="./login" method="POST">
          <div class="uk-margin">
            <div class="uk-inline uk-width-1-1">
            <span class="uk-form-icon" uk-icon="icon: user"></span>
            <input class="uk-input uk-form-blank" name="username" type="text" required autofocus placeholder="{{ __("Login name") }}">
            </div>
          </div>
          <div class="uk-margin">
            <div class="uk-inline uk-width-1-1">
              <span class="uk-form-icon" uk-icon="icon: lock"></span>
              <input class="uk-input uk-form-blank" name="password" type="password" required placeholder="{{ __("Password") }}">
            </div>
          </div>
          <div class="uk-width-1-1">
            <input class="uk-button uk-button-primary uk-float-right" type="submit" value="{{ __("Log in") }}">
          </div>
        </form>
      </div>
    </div>
    <div class="uk-overlay uk-position-bottom-center uk-light">
      <p>
        <a class="uk-link-reset uk-button uk-button-text" href="../">{{ __("Back to the speech list") }}</a>
      </p>
    </div>
    {% include 'admin/warnbubbles.twig' %}
    <script src="/static/uikit/js/uikit.min.js"></script>
    <script src="/static/uikit/js/uikit-icons.min.js"></script>
    <script>
      // Spread some pride in june
      var today = new Date();
      if (today.getMonth() == 5) {
        document.getElementsByTagName("body")[0].classList.add("dg-login-background-pride");
      }
    </script>
  </body>
</html>
